<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GraduationDesign" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_pink</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="player_dialog_fragment">
        <item name="android:windowEnterAnimation">@anim/player_enter</item>
        <item name="android:windowExitAnimation">@anim/player_exit</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/detail_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/detail_dialog_exit</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_launch</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="edit_style" parent="Theme.MaterialComponents.Light">
        <item name="colorControlActivated">@color/main_pink</item>
    </style>

    <style name="TranslucentTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="EditTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorControlNormal">@color/tabGrayTextColor</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="ThemeOverlay.GraduationDesign.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
    <style name="Theme.GraduationDesign.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GraduationDesign.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GraduationDesign.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>