<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/light_grey"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_notification_image_large"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher_costume"
        tools:ignore="ContentDescription"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_notification_name_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/default_user_name"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_notification_artist_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/default_user_name"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_notification_last_large"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/last"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/iv_notification_play_pause_large"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                tools:ignore="ContentDescription"
                android:src="@drawable/play"/>

            <ImageView
                android:id="@+id/iv_notification_next_large"
                android:layout_width="32dp"
                android:layout_height="32dp"
                tools:ignore="ContentDescription"
                android:src="@drawable/next"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>