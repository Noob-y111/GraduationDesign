<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/light_grey"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_notification_image"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription"
        android:src="@drawable/ic_lemon"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_notification_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/default_user_name"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_notification_last"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/last"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/iv_notification_play_pause"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                tools:ignore="ContentDescription"
                android:src="@drawable/play"/>

            <ImageView
                android:id="@+id/iv_notification_next_small"
                android:layout_width="32dp"
                android:layout_height="32dp"
                tools:ignore="ContentDescription"
                android:src="@drawable/next"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>